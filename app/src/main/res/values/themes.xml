<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- https://material.io/design/typography/the-type-system.html#type-scale -->

    <style name="AppTextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextAppearance.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">0.27sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextAppearance.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">0.27sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextAppearance.Headline5.Regular" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">0.27sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="AppTextAppearance.Subtitle1.LightGrey" parent="AppTextAppearance.Subtitle1">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="AppTextAppearance.Subtitle1.Grey" parent="AppTextAppearance.Subtitle1">
        <item name="android:textColor">@color/medium_grey</item>
    </style>

    <style name="AppTextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="AppTextAppearance.Subtitle2.Alpha" parent="AppTextAppearance.Subtitle2">
        <item name="android:textColor">@color/white_alpha_60</item>
    </style>

    <style name="AppTextAppearance.Body1" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:lineSpacingExtra">7dp</item>
    </style>

    <style name="AppTextAppearance.Body2" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTextAppearance.Button.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextAppearance.Button.Icon">
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTextAppearance.Button.Pro">
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTextAppearance.Button.SingIn">
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextAppearance.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTextAppearance.Caption.Bold" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextAppearance.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>


</resources>